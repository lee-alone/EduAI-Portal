{
  "name": "classroom-interaction-modular",
  "version": "1.0.0",
  "description": "模块化的课堂互动平台",
  "main": "js/main.js",
  "type": "module",
  "scripts": {
    "dev": "python -m http.server 8000",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss css/main.css -o dist/style.css",
    "build:js": "rollup -c",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "postcss css/main.css -o dist/style.css --watch",
    "watch:js": "rollup -c --watch",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write js/**/*.js css/**/*.css",
    "test": "jest",
    "serve": "live-server --port=3000 --open=index-modular.html"
  },
  "keywords": [
    "education",
    "classroom",
    "interaction",
    "modular",
    "javascript"
  ],
  "author": "EduAI Portal Team",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "rollup": "^4.6.1"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "xlsx": "^0.18.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}

